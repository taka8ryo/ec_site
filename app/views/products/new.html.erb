<% provide(:title, "商品登録") %>
<div class="container">
<h1>商品登録(admin)</h1>
<%= simple_form_for @product do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :unit %>
  <%= f.input :image, as: :file %><br />
  <%= f.button :submit, "CREATE PRODUCT", class: 'btn-success' %>
<% end %>
</div>