<div class="container">
  <div class="product-detail">
    <h1>商品名：<%= @product.name %></h1>
    <figure><img src="<%= @product.image %>" alt="product_iamge"></figure>
    <ul>
      <li class="price">価格：<%= @product.price %><%= @product.unit %><li>
      <li class="description"><%= @product.description %></li>
    </ul>
    <%= link_to  product_add_to_baskets_path(@product), method: :post do %>
      <button type="button" class="btn btn-success carton">買い物かごに入れる</button>
    <% end %>
  </div>
</div>