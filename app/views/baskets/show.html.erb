<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>買い物かごの中身</h3>
      <table>
        <tr>
          <th>商品名</th>
          <th>値段</th>
          <th>削除</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %><%= product.unit %></td>
            <td><%= link_to "×", product_delete_in_baskets_path(product), method: :post, data:{ confirm: "削除しますか?" } %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>